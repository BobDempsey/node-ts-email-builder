{
	"name": "node-ts-library-template",
	"version": "1.0.0",
	"description": "A Node.js TypeScript library template with utilities",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"clean": "rimraf dist",
		"dev": "npm run build && node dist/preview.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky"
	},
	"keywords": [
		"nodejs",
		"node",
		"typescript",
		"template",
		"library",
		"utility",
		"environment",
		"env",
		"zod",
		"validation",
		"logger",
		"pino",
		"jest",
		"testing",
		"lint",
		"format",
		"biome",
		"vscode",
		"configuration",
		"schema",
		"typesafe",
		"unit",
		"constants"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BobDempsey/node-ts-template.git"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@types/express": "^4.17.21",
		"@types/html-to-text": "^9.0.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.10.0",
		"@types/pino": "^7.0.4",
		"@types/ws": "^8.5.10",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"pino-pretty": "^13.1.3",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.0.0"
	},
	"dependencies": {
		"chokidar": "^3.6.0",
		"dotenv": "^17.2.3",
		"express": "^4.21.1",
		"handlebars": "^4.7.8",
		"html-to-text": "^9.0.5",
		"juice": "^10.0.1",
		"open": "^10.1.0",
		"pino": "^10.1.0",
		"ws": "^8.18.0",
		"zod": "^4.1.12"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched"
	}
}
