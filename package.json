{
	"name": "node-ts-email-builder",
	"version": "1.0.0",
	"description": "A TypeScript email builder library with Handlebars templates, CSS inlining, and live preview",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "npm run build:css && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"build:css": "npx @tailwindcss/cli -i ./src/email-builder/styles/main.css -o ./src/email-builder/public/css/styles.css --minify",
		"clean": "rimraf dist src/email-builder/public/css",
		"dev": "npm run build && node dist/preview.js",
		"dev:watch": "concurrently \"npm run watch:css\" \"npm run watch:ts\"",
		"watch:css": "npx @tailwindcss/cli -i ./src/email-builder/styles/main.css -o ./src/email-builder/public/css/styles.css --watch",
		"watch:ts": "tsc -p tsconfig.build.json --watch",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky"
	},
	"keywords": [
		"email",
		"email-builder",
		"email-templates",
		"handlebars",
		"html-email",
		"typescript",
		"nodejs",
		"css-inline",
		"mjml-alternative",
		"transactional-email"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BobDempsey/node-ts-email-builder.git"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@tailwindcss/cli": "^4.0.0",
		"@types/express": "^4.17.21",
		"@types/html-to-text": "^9.0.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.10.0",
		"@types/pino": "^7.0.4",
		"@types/ws": "^8.5.10",
		"concurrently": "^9.1.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"pino-pretty": "^13.1.3",
		"rimraf": "^5.0.5",
		"tailwindcss": "^4.0.0",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"dependencies": {
		"chokidar": "^3.6.0",
		"express": "^4.21.1",
		"handlebars": "^4.7.8",
		"html-to-text": "^9.0.5",
		"juice": "^10.0.1",
		"open": "^10.1.0",
		"pino": "^10.1.0",
		"ws": "^8.18.0",
		"zod": "^4.1.12"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched"
	}
}
